{
  "name": "portfolio",
  "version": "0.1.0",
  "description": "Portfolio of Alejandro Fernández Alburquerque.",
  "config": {
    "app_root": "app",
    "port": 8080,
    "headers": "",
    "url": "https://alejandrofernandez.pages.dev"
  },
  "scripts": {
    "setup:ci": "npm ci && cd ${npm_package_config_app_root} && flutter pub get",
    "setup:dev": "npm run setup:ci && flutter pub global activate dhttpd",
    "upgrade-deps:npm": "npm update --include=dev --save=true",
    "upgrade-deps:pub": "cd ${npm_package_config_app_root} && flutter pub upgrade --tighten",
    "upgrade-deps": "npm run upgrade-deps:npm && npm run upgrade-deps:pub",
    "lint:shell": "npx shellcheck --enable=all .githooks/*",
    "lint:dart": "cd ${npm_package_config_app_root} && flutter analyze",
    "lint": "npm run lint:shell && npm run lint:dart",
    "test": "cd ${npm_package_config_app_root} && flutter test",
    "build:wasm": "cd ${npm_package_config_app_root} && flutter build web --release --no-web-resources-cdn --wasm",
    "build:html": "cd ${npm_package_config_app_root} && flutter build web --release --no-web-resources-cdn --web-renderer html",
    "build": "npm run build:${BUILD_RENDERER:-wasm}",
    "postbuild": "npm run generate-csp",
    "serve": "cd ${npm_package_config_app_root} && flutter run -d chrome --web-port ${npm_package_config_port}",
    "preserve:release": "npm run build",
    "serve:release": "flutter pub global run dhttpd --port ${npm_package_config_port} --path ${npm_package_config_app_root}/build/web --headers=${npm_package_config_headers}",
    "audit:local": "npx lighthouse http://localhost:${npm_package_config_port} --output html",
    "audit:prod": "npx lighthouse ${npm_package_config_url} --view",
    "predeploy": "npm run build",
    "deploy": "npx wrangler pages deploy ${npm_package_config_app_root}/build/web --branch=${DEPLOY_BRANCH} --project-name=${npm_package_name}",
    "update-sitemap": "scripts/update_sitemap.py",
    "generate-csp": "scripts/csp_scripts_hashes.py"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alejandro-FA/Alejandro-FA.github.io.git"
  },
  "author": "Alejandro Fernández Alburquerque",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/Alejandro-FA/Alejandro-FA.github.io/issues"
  },
  "homepage": "https://github.com/Alejandro-FA/Alejandro-FA.github.io#readme",
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "lighthouse": "^12.2.1",
    "shellcheck": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "wrangler": "^3.78.7"
  },
  "engines": {
    "node": "^20.17.0"
  }
}
